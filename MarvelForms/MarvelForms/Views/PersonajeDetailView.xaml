<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarvelForms.Views.PersonajeDetailView"
             Title="{Binding Titulo}">
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="StartAndExpand">
            <Image HeightRequest="200" WidthRequest="Infinity" Source="{Binding RutaImagen}" ></Image>
            <Label Text="{Binding Personaje.description}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>